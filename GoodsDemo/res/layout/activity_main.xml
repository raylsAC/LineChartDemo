<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" xmlns:app="http://schemas.android.com/apk/res/com.example.goodsdemo">

      <com.example.goodsdemo.view.HorizontalListView
        android:id="@+id/lv_horizontal"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="bottom|center_vertical"
        app:dividerWidth="-30dp"
        />
      
      <Button 
          android:id="@+id/btn_setselect"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_below="@+id/lv_horizontal"/>
</RelativeLayout>
